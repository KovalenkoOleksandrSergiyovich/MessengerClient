<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<?import javafx.scene.control.PasswordField?>
<VBox alignment="TOP_CENTER" cache="true" prefHeight="370.0" prefWidth="326.0" style="-fx-background-color: linear-gradient(#e0eb0e, #fff);" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="messenger.app.messenger.controllers.RegistrationViewController">
<padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
</padding>
<children>
    <AnchorPane>
        <children>
            <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="61.0" prefWidth="286.0" style="-fx-font-family: 'Hind Siliguri', sans-serif;" styleClass="h1" text="Registration">
                <font>
                    <Font name="Comic Sans MS" size="13.0" />
                </font>
            </Label>
        </children>
    </AnchorPane>
      <Label fx:id="errorMessage" alignment="CENTER" contentDisplay="CENTER" prefHeight="16.0" prefWidth="231.0" styleClass="text-danger">
         <VBox.margin>
            <Insets top="10.0" />
         </VBox.margin>
      </Label>
    <TextField fx:id="username" accessibleHelp="User name" accessibleText="User name" promptText="User name">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></TextField>
    <PasswordField fx:id="password" prefWidth="280.0" promptText="Password">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
    </PasswordField>
    <PasswordField fx:id="passwordRepeat" prefWidth="280.0" promptText="Repeat password">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin>
    </PasswordField>
    <Button mnemonicParsing="false" onAction="#onRegistrationClick" prefHeight="26.0" prefWidth="186.0" styleClass="btn-primary" stylesheets="@slyles/bootstrapfx.css" text="Create account">
         <VBox.margin>
            <Insets top="20.0" />
         </VBox.margin></Button>
    <Pane prefHeight="17.0" prefWidth="286.0">
        <children>
            <Button layoutX="193.0" layoutY="-3.0" mnemonicParsing="false" onAction="#onSignInButtonClick" style="-fx-background-color: transparent;" text="Sign In!" textFill="#27c0eb" />
            <Label layoutX="20.0" layoutY="1.0" text="Already have an account? " />
        </children>
         <VBox.margin>
            <Insets top="40.0" />
         </VBox.margin>
    </Pane>
</children>
<stylesheets>
    <URL value="@slyles/styles.css" />
    <URL value="@slyles/bootstrapfx.css" />
</stylesheets>
</VBox>
